<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearnModeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="80dp"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/tv_level_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/tv_intro_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_current_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_current_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_translated_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="500dp"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/enter_morse_code"
            style="@style/StyledButton"/>

        <Button
            android:id="@+id/btn_select_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_level"
            style="@style/StyledButton"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</RelativeLayout>