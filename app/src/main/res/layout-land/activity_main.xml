<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageButton
            style="@style/SmallImageButtonStyle"
            android:id="@+id/btn_about"
            android:src="@drawable/icon_info"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"/>

        <ImageButton
            style="@style/SmallImageButtonStyle"
            android:id="@+id/btn_settings"
            android:src="@drawable/icon_setting"
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <Button
            style="@style/StyledButton"
            android:id="@+id/btn_learn_mode"
            android:layout_width="match_parent"
            android:text="@string/learn_morse_code"
            android:drawableLeft="@drawable/icon_brain"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"/>

        <Button
            style="@style/StyledButton"
            android:id="@+id/btn_write_mode"
            android:layout_width="match_parent"
            android:text="@string/write_morse_code"
            android:drawableLeft="@drawable/icon_write"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>
</RelativeLayout>